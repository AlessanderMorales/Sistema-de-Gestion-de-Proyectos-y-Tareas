@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Comentarios.CreateModel

<h2>Nuevo Comentario</h2>

<form method="post">
    <div class="form-group">
        <label>Contenido</label>
        <textarea asp-for="Comentario.Contenido" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>ID Tarea</label>
        <input asp-for="Comentario.IdTarea" class="form-control" />
    </div>

    <div class="form-group">
        <label>ID Usuario</label>
        <input asp-for="Comentario.IdUsuario" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
