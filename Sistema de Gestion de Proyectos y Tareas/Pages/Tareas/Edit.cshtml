@page "{id:int}"
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.EditModel
@{
    ViewData["Title"] = "Editar Tarea";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tarea.Id" />

            <div class="mb-3">
                <label asp-for="Tarea.Titulo" class="form-label"></label>
                <input asp-for="Tarea.Titulo" class="form-control" />
                <span asp-validation-for="Tarea.Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tarea.Descripcion" class="form-label"></label>
                <textarea asp-for="Tarea.Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Tarea.Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tarea.Prioridad" class="form-label"></label>
                <select asp-for="Tarea.Prioridad" class="form-control">
                    <option value="">-- Seleccione Prioridad --</option>
                    <option value="Alta" selected="@(Model.Tarea.Prioridad=="Alta")">Alta</option>
                    <option value="Media" selected="@(Model.Tarea.Prioridad=="Media")">Media</option>
                    <option value="Baja" selected="@(Model.Tarea.Prioridad=="Baja")">Baja</option>
                </select>
                <span asp-validation-for="Tarea.Prioridad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tarea.id_proyecto" class="form-label">Proyecto</label>
                <select asp-for="Tarea.id_proyecto" class="form-control" asp-items="Model.ProyectosDisponibles">
                    <option value="">-- Seleccione un Proyecto --</option>
                </select>
                <span asp-validation-for="Tarea.id_proyecto" class="text-danger"></span>
            </div>

            @* Assigned user: show select only for admins/supervisors/jefes; otherwise show read-only name *@
            @if (Model.CanAssignUsers)
            {
                <div class="mb-3">
                    <label class="form-label">Asignado a</label>
                    <select asp-for="Tarea.AssignedUserId" class="form-control" asp-items="Model.UsuariosDisponibles">
                        <option value="">-- Sin asignar --</option>
                    </select>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <label class="form-label">Asignado a</label>
                    <input class="form-control" value="@(Model.Tarea.AssignedUser?.PrimerNombre ?? "Sin asignar")" readonly />
                </div>
            }

            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}