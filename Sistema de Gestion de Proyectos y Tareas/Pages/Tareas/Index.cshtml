@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.IndexModel
@{
    ViewData["Title"] = "Lista de Tareas";
}

<style>
    :root {
        --accent-red: #D32F2F;
        --accent-orange: #FF5722;
        --accent-gold: #FFD700;
        --accent-edit: #ffc107;
    }

    .title-volcanic {
        background: linear-gradient(45deg, var(--accent-gold), var(--accent-orange));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
   font-weight: 700;
    }

  .header-actions {
display: flex;
 justify-content: space-between;
 align-items: center;
        margin-bottom: 2rem;
   border-bottom: 2px solid rgba(255,255,255,0.1);
        padding-bottom: 1rem;
    }

    .table-volcanic {
  background-color: transparent;
   color: #e0e0e0;
   border-collapse: separate;
        border-spacing: 0 10px;
 }
  .table-volcanic > :not(caption) > * > * {
        background-color: #3a3a40;
padding: 1.25rem;
 border-width: 0;
    vertical-align: middle;
    }
    .table-volcanic thead th {
background-color: transparent;
        color: var(--accent-gold);
        font-size: 0.9rem;
        text-transform: uppercase;
  letter-spacing: 1px;
   border-bottom: 2px solid var(--accent-orange);
    }
    .table-volcanic tbody tr:hover { background-color: #4a4a50; }

    .priority-badge { 
      display: inline-block;
  padding: 6px 12px; 
        border-radius: 15px; 
        font-weight: bold; 
  color: #212529; 
      font-size: 0.85rem; 
    }
    .priority-alta { background-color: #dc3545; color: white; }
    .priority-media { background-color: #ffc107; }
    .priority-baja { background-color: #28a745; color: white; }

    .project-link { color: var(--accent-orange); text-decoration: none; font-weight: 500; }
    .project-link:hover { color: var(--accent-gold); }

 .btn-action { border-radius: 6px; font-weight: 500; padding: 5px 12px; transition: all 0.2s ease; }
    .btn-action:hover { transform: translateY(-1px); }
    .btn-edit { background-color: var(--accent-edit); border-color: var(--accent-edit); color: #212529; }
    .btn-delete { background-color: #6c757d; border-color: #6c757d; color: white; }

    .btn-volcanic-primary {
        background: linear-gradient(45deg, var(--accent-red), var(--accent-orange));
        border: none; color: white; font-weight: bold; padding: 10px 20px; border-radius: 8px;
        transition: all 0.3s ease;
    }
    .btn-volcanic-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(255, 87, 34, 0.4); }
 
    .modal-content.volcanic-modal { background-color: #2c2c31; color: #f5f5f7; border: 1px solid rgba(255,255,255,0.2); border-radius: 15px; }
    .volcanic-modal .modal-header { border-bottom: 1px solid var(--accent-orange); }
    .volcanic-modal .modal-footer { border-top: 1px solid rgba(255,255,255,0.1); }
    .btn-volcanic-delete { background-color: var(--accent-red); border: none; color: white; font-weight: bold; padding: 10px 20px; border-radius: 8px; }
    .btn-volcanic-secondary-modal { background-color: #4a4a50; border: none; color: white; font-weight: bold; padding: 10px 20px; border-radius: 8px; }
    
    .status-badge {
 display: inline-block;
  padding: 5px 10px;
 border-radius: 15px;
        font-weight: bold;
        font-size: 0.8rem;
   white-space: nowrap;
    }
    .status-sin-iniciar { background-color: #6c757d; color: white; }
    .status-en-progreso { background-color: #ffc107; color: #212529; }
    .status-completada { background-color: #28a745; color: white; }
    
    .btn-status { background-color: #17a2b8; border-color: #17a2b8; color: white; }
</style>

<div class="header-actions">
    <h1 class="title-volcanic m-0">@ViewData["Title"]</h1>
    @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
    {
        <a asp-page="Create" class="btn btn-volcanic-primary">Crear Nueva Tarea</a>
    }
</div>

<table class="table table-volcanic">
    <thead>
  <tr>
  <th>Titulo</th>
    <th>Descripcion</th>
    <th class="text-center">Prioridad</th>
        <th class="text-center">Estado</th>
  <th>Proyecto Asignado</th>
         @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
    {
        <th>Asignado a</th>
      }
    <th class="text-center">Acciones</th>
   </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tareas)
        {
  <tr>
        <td>@item.Titulo</td>
 <td>@item.Descripcion</td>
<td class="text-center">
     <span class="priority-badge priority-@(item.Prioridad.ToLower())">@item.Prioridad</span>
       </td>
    <td class="text-center">
                 @if (item.Status == "SinIniciar")
   {
          <span class="status-badge status-sin-iniciar">Sin Iniciar</span>
          }
            else if (item.Status == "EnProgreso")
       {
            <span class="status-badge status-en-progreso">En Progreso</span>
        }
       else if (item.Status == "Completada")
          {
 <span class="status-badge status-completada">Completada</span>
         }
    </td>
   <td>
        @if (!string.IsNullOrEmpty(item.ProyectoNombre))
        {
   <a class="project-link" asp-page="/Proyectos/Mostrar" asp-route-id="@item.IdProyecto">@item.ProyectoNombre</a>
      }
 else
      {
 <span class="text-muted">No asignado</span>
      }
  </td>

            @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
{
    <td>
     @if (!string.IsNullOrEmpty(item.UsuarioAsignadoNombre))
         {
<span class="text-info">@item.UsuarioAsignadoNombre</span>
     }
        else
       {
       <span class="text-muted">Sin asignar</span>
         }
  </td>
          }

     <td class="text-center">
        @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
    {
          <a class="btn btn-sm btn-info" asp-page="Edit" asp-route-id="@item.Id">Editar</a>
     <a class="btn btn-sm btn-status" asp-page="CambiarEstado" asp-route-id="@item.Id">Estado</a>
          <a class="btn btn-sm btn-warning" asp-page="Asignar" asp-route-id="@item.Id">Asignar</a>
      <form method="post" asp-page="Index" asp-route-id="@item.Id" style="display:inline">
         <button type="submit" class="btn btn-sm btn-secondary">Eliminar</button>
       </form>
        }
      else if (User.IsInRole("Empleado"))
      {
        <a class="btn btn-sm btn-status" asp-page="CambiarEstado" asp-route-id="@item.Id">Cambiar Estado</a>
        }
        </td>
       </tr>
        }
  </tbody>
</table>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content volcanic-modal">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Confirmar Eliminación</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>¿Estás seguro de que deseas eliminar esta tarea?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-volcanic-secondary-modal" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-volcanic-delete" id="confirmDeleteButton">Sí, Eliminar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var confirmDeleteModal = document.getElementById('confirmDeleteModal');
            var confirmDeleteButton = document.getElementById('confirmDeleteButton');
            var itemIdToDelete;

            confirmDeleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                itemIdToDelete = button.getAttribute('data-item-id');
            });

            confirmDeleteButton.addEventListener('click', function () {
                if (itemIdToDelete) {
                    var form = document.getElementById('deleteForm-' + itemIdToDelete);
                    if (form) {
                        form.submit();
                    }
                }
            });
        });
    </script>
}