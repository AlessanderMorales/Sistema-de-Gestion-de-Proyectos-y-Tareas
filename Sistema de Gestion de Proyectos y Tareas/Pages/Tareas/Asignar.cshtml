@page "{id:int}"
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.AsignarModel
@{
    ViewData["Title"] = "Asignar Tarea";
}

<h1>@ViewData["Title"]</h1>
<form method="post">
    <input type="hidden" asp-for="TareaId" />
    <div class="mb-3">
        <label class="form-label">Asignar a Usuario</label>
        <select asp-for="UsuarioId" class="form-select" asp-items="Model.UsuariosDisponibles">
            <option value="">-- Seleccione un Usuario --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar</button>
    <a asp-page="/Tareas/Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
