@page "{id:int}"
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.MostrarModel
@{
    ViewData["Title"] = "Detalle de Tarea";
}

<style>
    :root {
        --accent-red: #D32F2F;
        --accent-orange: #FF5722;
        --accent-gold: #FFD700;
        --accent-edit: #ffc107;
    }

    .title-volcanic {
        background: linear-gradient(45deg, var(--accent-gold), var(--accent-orange));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        border-bottom: 2px solid rgba(255,255,255,0.1);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .details-list dt {
        color: var(--accent-gold);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .details-list dd {
        color: #e0e0e0;
        margin-left: 0;
        margin-bottom: 1.5rem;
    }

    .priority-badge { padding: 6px 12px; border-radius: 15px; font-weight: bold; color: #212529; font-size: 0.85rem; }
    .priority-alta { background-color: #dc3545; color: white; }
    .priority-media { background-color: #ffc107; }
    .priority-baja { background-color: #28a745; color: white; }

    .btn-edit { background-color: var(--accent-edit); border-color: var(--accent-edit); color: #212529; font-weight: bold; padding: 10px 25px; border-radius: 8px; transition: all 0.3s ease; }
    .btn-edit:hover { transform: translateY(-2px); }
    .btn-volcanic-secondary { background-color: transparent; border: 2px solid #6c757d; color: #ced4da; font-weight: bold; padding: 8px 25px; border-radius: 8px; transition: all 0.3s ease; }
    .btn-volcanic-secondary:hover { background-color: #6c757d; color: white; }
</style>

<h1 class="title-volcanic">@ViewData["Title"]</h1>

@if (Model.Tarea != null)
{
    <div>
        <dl class="row details-list">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tarea.Titulo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tarea.Titulo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tarea.Descripcion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tarea.Descripcion)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tarea.Prioridad)</dt>
            <dd class="col-sm-9">
                <span class="priority-badge priority-@(Model.Tarea.Prioridad.ToLower())">@Model.Tarea.Prioridad</span>
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-edit">Editar Tarea</a>
        <a asp-page="./Index" class="btn btn-volcanic-secondary ms-2">Volver a la Lista</a>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Tarea no encontrada</h4>
        <p>La tarea que buscas no existe o fue eliminada.</p>
    </div>
}