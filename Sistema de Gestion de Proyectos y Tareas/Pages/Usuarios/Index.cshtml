@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre Completo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.UsuariosTable.Rows)
        {
            <tr>
                <td>@row["id_usuario"]</td>
                <td>@($"{row["primer_nombre"]} {row["segundo_nombre"]} {row["apellidos"]}")</td>
                <td>@row["rol"]</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="Edit" asp-route-id="@row["id_usuario"]">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@row["id_usuario"]">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>