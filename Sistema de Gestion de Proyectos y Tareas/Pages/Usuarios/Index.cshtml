@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Usuarios.IndexModel
@{ ViewData["Title"] = "Lista de Usuarios"; }

<h1>@ViewData["Title"]</h1>
<p><a asp-page="Create" class="btn btn-primary">Crear Nuevo Usuario</a></p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th><th>Nombre Completo</th><th>Rol</th><th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Usuarios) {
            <tr>
                <td>@item.Id</td>
                <td>@($"{item.PrimerNombre} {item.SegundoNombre} {item.Apellidos}")</td>
                <td>@item.Rol</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>